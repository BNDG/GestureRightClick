{
    "manifest_version": 3,
    "name": "简单右键手势",
    "version": "1.1.1",
    "description": "一个简单的右键手势扩展，帮助用户通过右键手势快速执行常用操作。",
    "permissions": [
        "history",
        "tabs",
        "sessions",
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "iframe-content.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/*",
                "calc-popup.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
      "*://*/*",
      "<all_urls>"
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "options_page": "options.html"
}